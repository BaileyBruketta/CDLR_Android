<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:id="@+id/profilepicture"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="18dp"
        app:srcCompat="@color/colorAccent" />

    <Button
        android:id="@+id/makebidbutton"
        android:layout_width="148dp"
        android:layout_height="78dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:text="Make Bid" />

    <LinearLayout
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bidcounttext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bids: 3" />

        <TextView
            android:id="@+id/currentpricetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Bid: $550" />

        <TextView
            android:id="@+id/timelefttext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time Left: 0:30" />

        <TextView
            android:id="@+id/scheduledtimetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time: 5:00 p.m." />

        <TextView
            android:id="@+id/servicelengthtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service Length: 1 hr" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="121dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/yourplacecheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Your Place" />

        <CheckBox
            android:id="@+id/hotelcheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hotel" />
    </LinearLayout>

    <TextView
        android:id="@+id/nametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"
        android:text="Person Name" />

    <Button
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="309dp"
        android:layout_marginRight="309dp"
        android:layout_marginBottom="189dp"
        android:text="Back" />
</RelativeLayout>